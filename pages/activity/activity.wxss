/* pages/activity/activity.wxss */
swiper{
  display: block;
  width: 100%;
  height:  420rpx;
}
.swiper-item{
  display: block;
  height: 420rpx;
  background: #ccc;
}
.draw-result{
  display: flex;
  justify-content: flex-start;
  height: 80rpx;
  padding:30rpx;
  background: #32302d;
}
.draw-result .draw-name{
  width: 580rpx;
  margin-bottom:20rpx;
  color:#bf9a5c;
  font-size:12pt;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.draw-result .draw-num{
  display: flex;
  width: 580rpx;
  height: 30rpx;
  justify-content: space-between;
}
.draw-result .draw-num text{
  color:#999;
  font-size:9pt;
}
.draw-result .draw-num navigator{
  color:#bf9a5c;
  font-size:9pt;
  text-decoration: underline;
}
.activity-wrap{
  padding:40rpx 30rpx;
  box-shadow:0 9rpx 9.6rpx 0.4rpx rgba(179,156,132,0.2);
}
.activity-wrap .title{
  display: flex;
  justify-content: space-between;
  font-size:12pt;
}
.activity-wrap .title .over{
  padding:0 20rpx;
  margin-left:10rpx;
  color:#fff;
  font-size:9pt;
  text-align: center;
  line-height: 32rpx;
  background: #cccccc;
  border-radius: 8rpx;
}
.activity-wrap .time{
  display: flex;
  height: 24rpx;
  align-items: center;
  justify-content: flex-start;
  margin-top:20rpx;
  font-size:9pt;
}
.activity-wrap .time view{
  margin-left:10rpx;
}
.activity-wrap .time text{
  color:#cc0000;
}
.activity-wrap .outer{
  position: relative;
  width: 160rpx;
  height: 36rpx;
  background: #fff;
  border:1rpx solid #bf9a5c;
  border-radius: 8rpx;
}
.activity-wrap .inner{
  width: 50%;
  height: 100%;
  background: #dfccad;
  border-radius: 4rpx;
}
.inner-text{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  color:#666;
  font-size:7pt;
  text-align: center;
  line-height: 36rpx;
}
.process-text{
  display: flex;
  height: 30rpx;
  margin-top:20rpx;
  align-items: center;
  justify-content: space-between;
}
.process-text view{
  font-size:9pt;
}
.process-text view text{
  color:#ff9933;
}
.process-text .value{
  font-size:15pt;
}
.process-text .num{
  color:#666;
  font-size:7pt;
}
.process-text navigator{
  color:#bf9a5c;
  font-size:9pt;
  text-decoration: underline;
}
.detail-wrap{
  padding:0 30rpx;
}
.detail-wrap .title{
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: space-between;
  color:#666;
  font-size:12pt;
}
.detail-wrap .title navigator{
  display: flex;
  justify-content: flex-end;
  text-decoration: underline;
}
.detail-wrap .title navigator text{
  margin-left:5rpx;
  color:#ff9933;
  font-size:9pt;
}
.detail-info{
  color:#999;
  font-size:10pt;
  line-height: 1.3;
}
.join-bottom{
  position: fixed;
  left:0;
  bottom:0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 0 16rpx rgba(0,0,0,0.3);
}
.join-bottom navigator{
  color:#bf9a5c;
  font-size:13pt;
  text-align: center;
  line-height: 100rpx;
}
.process-outer{
  margin-top:20rpx;
  height: 18rpx;
  border: 1rpx solid #bf9a5c;
  border-radius:10rpx;
  overflow: hidden;
}
.process-inner{
  height: 100%;
  background: #bf9a5c;
  border-radius:5rpx;  
}