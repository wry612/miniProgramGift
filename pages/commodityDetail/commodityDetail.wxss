/* pages/commodityDetail/commodityDetail.wxss */
swiper{
  display: block;
  width: 100%;
  height:  420rpx;
}
.swiper-item{
  display: block;
  height: 420rpx;
  background: #ccc;
}
.desc-wrap{
  padding:30rpx 25rpx 45rpx;
  box-shadow: 0 9rpx 0.4rpx 9.6rpx rgba(179,156,132,0.2);
}
.desc-title{
  font-size:12pt;
  font-weight:bold;
}
.description{
  margin-top:20rpx;
  color:#999999;
  font-size:9pt;
  line-height: 1.5;
}
.desc-value{
  display: flex;
  margin-top:25rpx;
  align-items: center;
  justify-content: space-between;
}
.value-left{
  color:#ff9933;
  font-size:15ptï¼›
}
.value-right{
  color:#999;
  font-size:9pt;
}
.detail-wrap{
  padding:0 20rpx;
  margin-top:10rpx;
}
.detail-title{
  height: 80rpx;
  margin-bottom:10rpx;
  color:#666;
  font-size:12pt;
  line-height: 80rpx;
  border-bottom:1rpx solid #ececec;
}
.detail-item{
  display: flex;
  height: 60rpx;
  align-items: center;
  justify-content: flex-start;
}
.detail-key{
  width: 230rpx;
  color:#999;
  font-size:11pt;
  text-align: left;
}
.detail-value{
  width: 480rpx;
  color:#464646;
  font-size:11pt;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.img-wrap{
  padding-bottom:100rpx;
}
.detail-img{
  width: 100%;
}
.fixed-bottom{
  position: fixed;
  left:0;
  bottom:0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  box-shadow:0 0 16rpx rgba(0,0,0,0.3);
  z-index: 1;
}
.buy{
  color:#bf9a5c;
  font-size:13pt;
  font-weight: bold;
}