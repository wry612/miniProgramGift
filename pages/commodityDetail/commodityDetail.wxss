/* pages/commodityDetail/commodityDetail.wxss */
swiper{
  display: block;
  width: 100%;
  height:  420rpx;
}
.swiper-item{
  display: block;
  height: 420rpx;
  background: #ccc;
}
.desc-wrap{
  padding:30rpx 25rpx 45rpx;
  box-shadow: 0 9rpx 0.4rpx 9.6rpx rgba(179,156,132,0.2);
}
.desc-title{
  font-size:12pt;
  font-weight:bold;
}
.description{
  margin-top:20rpx;
  color:#999999;
  font-size:9pt;
  line-height: 1.5;
}
.desc-value{
  display: flex;
  margin-top:25rpx;
  align-items: center;
  justify-content: space-between;
}
.value-left{
  color:#ff9933;
  font-size:15ptï¼›
}
.value-right{
  color:#999;
  font-size:9pt;
}
.detail-wrap{
  padding:0 20rpx;
  margin-top:10rpx;
}
.detail-title{
  height: 80rpx;
  margin-bottom:10rpx;
  color:#666;
  font-size:12pt;
  line-height: 80rpx;
  border-bottom:1rpx solid #ececec;
}
.detail-item{
  display: flex;
  height: 60rpx;
  align-items: center;
  justify-content: flex-start;
}
.detail-key{
  width: 230rpx;
  color:#999;
  font-size:11pt;
  text-align: left;
}
.detail-value{
  width: 480rpx;
  color:#464646;
  font-size:11pt;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.img-wrap{
  padding-bottom:100rpx;
}
.detail-img{
  width: 100%;
}
.fixed-bottom{
  position: fixed;
  left:0;
  bottom:0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  box-shadow:0 0 16rpx rgba(0,0,0,0.3);
  z-index: 1;
}
.buy{
  color:#bf9a5c;
  font-size:13pt;
  font-weight: bold;
}
.buy-wrap{
  position: absolute;
  left:0;
  bottom:0;
  width: 690rpx;
  height:580rpx;
  padding:30rpx;
  background: #fff;
  z-index: 1;
}
.buy-desc{
  display: flex;
  justify-content: flex-start;
  margin-bottom:12rpx;
}
.desc-name{
  font-size:12pt;
  line-height: 60rpx;
}
.desc-number{
  color:#999;
  font-size:9pt;
  line-height: 60rpx;
}
.number{
  color:#666;
  font-size:12pt;
}
.buy-title{
  padding:18rpx 0;
  color:#999;
  font-size:9pt;
}
.standard-box{
  display: flex;
  justify-content: flex-start;
}
.standard-item{
  width: 118rpx;
  height: 78rpx;
  margin-right:20rpx;
  color:#666;
  font-size: 12pt;
  text-align: center;
  line-height: 78rpx;
  border:1rpx solid #ccc;
}
.standard-item.active{
  color:#fff;
  background: #bf9a5c;
  border:1px solid #bf9a5c;
}
.input-box{
  display: flex;
  justify-content: flex-start;
}
.minus,.add{
  width: 78rpx;
  height: 78rpx;
  color:#000;
  font-size:14pt;
  font-weight:bold;
  text-align: center;
  line-height: 78rpx;
  border:1rpx solid #ccc;
}
.input-number{
  width: 116rpx;
  height: 78rpx;
  color:#666;
  font-size: 12pt;
  text-align: center;
  border-top:1rpx solid #ccc;
  border-bottom:1rpx solid #ccc;
}
.current-stock{
  margin-left:20rpx;
  color:#999;
  font-size: 9pt;
  line-height: 80rpx;
}
.buy-bottom{
  position: absolute;
  left:0;
  bottom:0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 0 16rpx rgba(0,0,0,0.3);
}
.total-title{
  margin-left:40rpx;
  font-size:13pt;
  line-height: 100rpx;
}
.total-value{
  margin-left:10rpx;
  color:#bf9a5c;
  font-size:13pt;
  line-height: 100rpx;
}
.btn-buy{
  width: 242rpx;
  height: 100rpx;
  color:#fff;
  font-size:13pt;
  text-align: center;
  line-height: 100rpx;
  background: #bf9a5c;
}
.dialog-wrap{
  position: absolute;
  left:80rpx;
  top:50%;
  width: 530rpx;
  height: 440rpx;
  padding:0 30rpx;
  margin-top:-240rpx;
  background: #fff;
  box-shadow: 0 9rpx 9.6rpx 0.4rpx rgba(179,156,132,0.2);
  z-index: 2;
}
.dialog-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 97rpx;
  color:#666;
  font-size:12pt;
  border-bottom:1rpx dotted #ccc;
}
.body-tip{
  margin:20rpx 0 10rpx;
  color:#666;
  font-size: 9pt;
  line-height: 36rpx;
}
.body-item{
  display: flex;
  height: 40rpx;
  align-items: center;
  justify-content: space-between;
  color:#999;
  font-size:9pt;
}
.body-item text{
  color:#999;
}
.dialog-footer{
  position: absolute;
  left:0;
  bottom:0;
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  border-top:1rpx solid #ccc;
}
.dialog-footer button{
  width: 50%;
  height: 88rpx;
  color:#666;
  font-size:12pt;
  text-align: center;
  border:none;
  outline: none;
  border-radius: 0;
}
.dialog-footer button:first-child{
  border-right:1rpx solid #ccc;
}
.dialog-footer button.ok{
  color:#bf9a5c;
}