/**index.wxss**/
swiper{
  display: block;
  width: 100%;
  height:  420rpx;
}
.swiper-item{
  display: block;
  height: 420rpx;
  background: #ccc;
}
.activity-title{
  padding:16rpx 30rpx 20rpx;
  color:#bf9a5c;
  font-size:10pt;
  text-align: right;
}
.section-wrap{
   border-top: 10rpx solid #f3f3f3;
}
.section-title{
  display: flex;
  color:#333;
  font-size:11pt;
  padding:25rpx 40rpx 20rpx;
  justify-content: space-between;
}
.section-more{
  font-size: 10pt;
}
.section-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding:0 40rpx;
}
.section-box{
  width: 313rpx;
  height: 383rpx;
  margin-bottom:30rpx;
  border-radius:4px;
  border:1rpx solid #ece5d2;
  overflow: hidden;
  box-shadow: 0 8rpx 10rpx rgba(211,195,170,0.25);
}
.box-img{
  width: 100%;
  height: 254rpx;
  background: #ccc;
}
.box-title{
  font-size:11pt;  
  padding:18rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.box-desc{
  display: flex;
  justify-content: space-between;
  padding:0 18rpx;
}
.number{
  color:#ff9933;
  font-size: 9pt;
}
.money{
  color:#ccc;
  font-size: 9pt;
  text-align: right;
}